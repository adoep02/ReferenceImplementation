<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/groupTab"
	style="@style/ContainerDefault"
	android:orientation="vertical">
	
	<LinearLayout
		style="@style/ContainerDefault"
		android:orientation="horizontal">
	
	<TextView
		style="@style/ContentDefault"
		android:text="@string/label__anonymousName18_text" />
	
	<EditText
		android:id="@+id/nameTextInput"
		style="@style/ContentDefault.EditTextDefault"
		android:inputType="text" />
		
	
	
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/persistence"
		style="@style/ContainerDefault"
		android:orientation="horizontal">
		
		<Button
			android:id="@+id/saveButton"
			style="@style/ContentDefault"
			android:text="@string/saveButton_text" />
		
	</LinearLayout>
	
</LinearLayout>
